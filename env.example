# Audivox Environment Configuration

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database (PostgreSQL)
DATABASE_URL=postgresql://audivox:audivox123@localhost:5432/audivox
DB_HOST=localhost
DB_PORT=5432
DB_NAME=audivox
DB_USER=audivox
DB_PASSWORD=audivox123

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_STORAGE_BUCKET=audivox-files

# Supabase Database (for production)
SUPABASE_DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres

# Piper TTS
PIPER_BIN=/path/to/piper
PIPER_PT_MODEL=/path/to/pt_model.onnx
PIPER_PT_CFG=/path/to/pt_model.json
PIPER_ES_MODEL=/path/to/es_model.onnx
PIPER_ES_CFG=/path/to/es_model.json
PIPER_EN_MODEL=/path/to/en_model.onnx
PIPER_EN_CFG=/path/to/en_model.json

# File Upload
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_MIME_TYPES=application/pdf,text/plain,application/epub+zip

# Rate Limiting
RATE_LIMIT_UPLOAD=10
RATE_LIMIT_PROCESSING=5
RATE_LIMIT_DOWNLOAD=20
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Security
JWT_SECRET=your-jwt-secret-key
CORS_ORIGIN=http://localhost:3001

# Development
DEBUG=true
ENABLE_SWAGGER=true
